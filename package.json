    "transpile": "babel dist/behringer/xtouch/behringer_xtouch.js --out-file dist/behringer/xtouch/behringer_xtouch.js",
    "copy": "sshpass -p User scp -P 2222 -r ./dist/behringer User@localhost:'\"Documents\\Steinberg\\Cubase\\MIDI Remote\\Driver Scripts\\Local\"'"
